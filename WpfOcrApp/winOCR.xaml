<Window x:Class="WpfOcrApp.winOCR"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfOcrApp"
        mc:Ignorable="d"
        Title="winOCR" Height="480" Width="640">
    <Grid>
        <Grid Height="40" VerticalAlignment="Top">
            <Button x:Name="btnOpen" Content="..." Margin="5,10,0,10" HorizontalAlignment="Left" Width="75" Click="btnOpen_Click"/>
            <TextBox x:Name="txtFileName" TextWrapping="Wrap" Text="Drag or Open a file to read infections" Margin="85,10,10,10"/>
        </Grid>
        <Grid Margin="0,45,0,104">
            <Image x:Name="imboxSource" HorizontalAlignment="Left" Width="306" Margin="10,10,0,10"/>
        </Grid>
        <Grid Height="99" VerticalAlignment="Bottom">
            <TextBox x:Name="txtInfo" TextWrapping="Wrap" Text="Status: Ready.." Margin="10" VerticalScrollBarVisibility="Auto"/>
        </Grid>

    </Grid>
</Window>
